{
  "name": "Lucca faces",
  "version": "1.0",
  "description": "Easy",
  "manifest_version": 2,
  "permissions": ["tabs", "storage", "declarativeContent", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.ilucca.net/directory/businesscards*"],
      "js": ["trombi.js"]
    },
    {
      "matches": ["*://*.ilucca.net/faces*"],
      "js": ["game.js"]
    }
  ],
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  }
}
